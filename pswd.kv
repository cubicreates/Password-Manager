<MyLayout>

    pswd: kvpswd # For the password Label

    # The above space for head title
    GridLayout:
        cols: 1
        size: root.width, root.height
        
        Label: #Head Title
            text: "Welcome! To Your Personal Password Manager"
            font_size: 35
            size_hint_y: None
            height: 65

        Label: #Sub Title
            text: "Please Choose Your Constraints"
            font_size: 25
            size_hint_y: None
            height: 50
        
        Label: #Blank Space
            text: ''
            size_hint_y: None
            height: 15

        # Main work
        GridLayout:
            rows:4
            cols:2
            size: root.width, root.height
            
            # Constraint 1 --> Symbol
            Label:
                id: text_label
                text: 'Please Choose the number of \nsymbols to be used:- '
                font_size: 23
                size_hint_y: None
                height: 75
            
            Spinner:
                id: sym1
                text: 'Choose'
                values: ['2','3','4']
                font_size: 35
                size_hint_y: None
                height: 75
                on_text: root.spinner_clicked(sym1.text)

            # Constraint 2 --> Number
            Label:
                id: text_label_n
                text: 'Please Choose the number of \nnumerals to be used:- '
                font_size: 23
                size_hint_y: None
                height: 75
            
            Spinner:
                id: num1
                text: 'Choose'
                values: ['2','3','4']
                font_size: 35
                size_hint_y: None
                height: 75
                on_text: root.spinner_n_clicked(num1.text)


            # Constraint 3 --> Capital Letters
            Label:
                id: text_label_c
                text: 'Please Choose the number of \nCapital Letters to be used:-  '
                font_size: 23
                size_hint_y: None
                height: 75
            
            Spinner:
                id: cap1
                text: 'Choose'
                values: ['2','3','4']
                font_size: 35
                size_hint_y: None
                height: 75
                on_text: root.spinner_c_clicked(cap1.text)
            
            # Constraint 4 --> Small Letters
            Label:
                id: text_label_s
                text: 'Please Choose the number of \n Small Letters to be used:-  '
                font_size: 23
                size_hint_y: None
                height: 75
            
            Spinner:
                id: sml1
                text: 'Choose'
                values: ['2','3','4']
                font_size: 35
                size_hint_y: None
                height: 75
                on_text: root.spinner_s_clicked(sml1.text)
            
        # Button
        Button:
            text: 'Generate'
            font_size: 35
            size_hint_y: None
            height: 80
            on_press: root.passmanager()
        
        # Output
        Label:
            id: kvpswd
            text: ''
            size_hint_y: None
            height: 70
            font_size: 20
